PROGRAM FIBONACCI;

uses crt;

VAR
I,RES : INTEGER;


FUNCTION FIB (N: INTEGER) :INTEGER;

VAR
X,Y,J,K : INTEGER;

BEGIN
IF (N < 0) THEN
BEGIN
WRITELN ('NEGATIVE ARGUMENT TO THE FIBONACCI FUNCTION');
EXIT
END;
IF (N <= 1) THEN
BEGIN
Result := N;
EXIT
END;
X := FIB(N-1);
Y := FIB(N-2);
Result := X + Y;
WRITELN ('N= ',N,' X= ',X,' Y= ',Y);

END;



BEGIN
CLRSCR;
WRITE ('ENTER THE FIBONACCI NUMBER => ');
READLN (I);
WRITELN; WRITELN;
WRITELN ('THE FIBONACCI SEQUENCE IS:');
WRITELN;
RES := FIB(I);
WRITELN;
WRITELN ('THE FIBONACCI RESULT IS = ',RES);

REPEAT UNTIL KEYPRESSED;

END.
