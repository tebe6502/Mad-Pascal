function putTile(tnum,x,y:byte):byte;
var vram:word;
    o:byte;
begin
    result:=1;
    if tnum < 26 then begin
        vram:=savmsc+x+(y*40);
        o:=0;
        result:=tilewidths[tnum];
        repeat
            move(@tiles[tnum][o],pointer(vram),result);
            inc(o,5);
            inc(vram,40);
        until o>24;
    end;
    inc(result);
end;

procedure putString(x,y:byte;s:string);
var cnum,c,w:byte;
begin
    cnum:=1;
    repeat 
        c:=byte(s[cnum])-65;
        w:=putTile(c,x,y);
        inc(x,w);
        inc(cnum);
    until cnum>byte(s[0]);
end;
